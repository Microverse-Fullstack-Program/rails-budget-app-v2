<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class = "app_header">
    <a href ="<%=  root_path %>"><i class="fa-solid fa-arrow-left" id="left-arrow"></i></a>
    <p>REGISTER</p>
    <%= f.submit "Next", class:"login-btn"%>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="signup_form">
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name" %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, autocomplete: "email" , placeholder: "Email Address"%>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password"%>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " Comfirm Password"%>
    </div>
  </div>
<% end %>
