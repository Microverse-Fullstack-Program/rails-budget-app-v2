<div class = "app_header">
    <a href="<%= categories_path %>">
        <i class="fa-solid fa-arrow-left" id = "left-arrow"></i>
    </a>
    <h2>New Category</h2>
    <a href="/logout" id = "logout">
        Logout
    </a>
</div>

<% if @category.errors.any? %>
    <div style="color: red; margin: 10px">
        <h2 style="font-size: 15px; font-weight: bold">
            <%= pluralize(@category.errors.count, "error") %> 
            prohibited this recipe from being saved:
        </h2>

        <ul>
            <% @category.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: @category, url: categories_path) do |form| %>
    <div class= "form-container">
        <%= form.text_field :name, placeholder: "Name" %>
        <%= form.text_field :icon, placeholder: "Icon Link" %>
        <%= form.submit "Save", class: "submit-button" %>
    </div>
<% end %>